{
  "name": "smart-task-azure-devops-pipelines",
  "version": "1.0.0",
  "description": "Intelligent Azure DevOps Pipeline task with contextual awareness and dynamic execution",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-task",
    "copy-task": "node -e \"require('fs').copyFileSync('src/task.json', 'dist/task.json')\"",
    "build:watch": "tsc --watch",
    "dev": "npm run build && node scripts/dev-test.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format-and-lint": "npm run format && npm run lint:fix",
    "package": "tfx extension create --manifest-globs vss-extension.json",
    "clean": "rimraf dist"
  },
  "keywords": [
    "azure-devops",
    "pipeline",
    "task",
    "ai",
    "langchain",
    "langgraph"
  ],
  "author": "Pratik Panda",
  "license": "MIT",
  "dependencies": {
    "@langchain/core": "^0.3.71",
    "@langchain/langgraph": "^0.4.5",
    "@langchain/openai": "^0.6.7",
    "azure-pipelines-task-lib": "^5.2.1",
    "dotenv": "^17.2.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tfx-cli": "^0.21.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
