{
  "name": "smart-task-azure-devops-pipelines",
  "version": "1.0.0",
  "description": "Intelligent Azure DevOps Pipeline task with contextual awareness and dynamic execution",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:watch": "webpack --mode=development --watch",
    "dev": "npm run build && node scripts/dev-test.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format-and-lint": "npm run format && npm run lint:fix",
    "package": "tfx extension create --manifest-globs vss-extension.json",
    "clean": "rimraf dist"
  },
  "keywords": [
    "azure-devops",
    "pipeline",
    "task",
    "ai",
    "langchain",
    "langgraph"
  ],
  "author": "Pratik Panda",
  "license": "MIT",
  "dependencies": {
    "@langchain/core": "^0.3.71",
    "@langchain/langgraph": "^0.4.5",
    "@langchain/openai": "^0.6.7",
    "azure-pipelines-task-lib": "^5.2.1",
    "dotenv": "^17.2.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "rimraf": "^6.0.1",
    "stream-browserify": "^3.0.0",
    "tfx-cli": "^0.21.3",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "util": "^0.12.5",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  }
}
