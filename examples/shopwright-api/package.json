{
  "name": "shopwright-api",
  "version": "2.1.3",
  "description": "Enterprise e-commerce platform API - Modern retail backend solution",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "npm run build:clean && npm run build:compile",
    "build:clean": "rimraf dist",
    "build:compile": "babel src --out-dir dist --copy-files",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=unit --coverage",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:e2e": "cypress run",
    "test:performance": "artillery run tests/performance/load-test.yml",
    "test:security": "npm audit && snyk test",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "docker:build": "docker build -t shopwright-api .",
    "docker:run": "docker run -p 3000:3000 shopwright-api",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "redis": "^4.6.8",
    "stripe": "^13.5.0",
    "nodemailer": "^6.9.4",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.9",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "cypress": "^13.2.0",
    "nodemon": "^3.0.1",
    "eslint": "^8.46.0",
    "rimraf": "^5.0.1",
    "artillery": "^2.0.1",
    "snyk": "^1.1210.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ecommerce",
    "api",
    "nodejs",
    "express",
    "mongodb",
    "microservices",
    "rest-api",
    "stripe",
    "authentication"
  ],
  "author": "ShopWright Engineering Team <engineering@shopwright.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shopwright/shopwright-api.git"
  }
}
